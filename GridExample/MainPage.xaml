<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GridExample.MainPage">
    <VerticalStackLayout x:Name="rootLayout">
        <Grid HeightRequest="500" RowDefinitions="30, 2*, *">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <BoxView Grid.Row="0" Grid.Column="0" Color="Blue" Margin="5"></BoxView>
            <BoxView Grid.Row="0" Grid.Column="1" Color="Blue" Margin="5" WidthRequest="200"></BoxView>
            <BoxView Grid.Row="1" Grid.Column="0" Color="Purple" Margin="5"></BoxView>
            <BoxView Grid.Row="1" Grid.Column="1" Color="Purple" Margin="5"></BoxView>
            <BoxView Grid.Row="2" Grid.ColumnSpan="2" Color="Green" Margin="5"></BoxView>
        </Grid>
    </VerticalStackLayout>
</ContentPage>
