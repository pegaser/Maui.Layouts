<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlignmentExample.MainPage">
    <Grid Padding="20" RowSpacing="10" RowDefinitions="50,50,*">
        <HorizontalStackLayout Grid.Row="0" Spacing="10">
            <Label Text="Horizontal" VerticalOptions="Center"></Label>
            <Button Text="Inicio" Clicked="OnHorizontalStartClicked"></Button>
            <Button Text="Centro" Clicked="OnHorizontalCenterClicked"></Button>
            <Button Text="Final" Clicked="OnHorizontalEndClicked"></Button>
            <Button Text="Rellenar" Clicked="OnHorizontalFillClicked"></Button>
        </HorizontalStackLayout>
        <HorizontalStackLayout Grid.Row="1" Spacing="10">
            <Label Text="Vertical" VerticalOptions="Center"></Label>
            <Button Text="Inicio" Clicked="OnVerticalStartClicked"></Button>
            <Button Text="Centro" Clicked="OnVerticalCenterClicked"></Button>
            <Button Text="Final" Clicked="OnVerticalEndClicked"></Button>
            <Button Text="Rellenar" Clicked="OnVerticalFillClicked"></Button>
        </HorizontalStackLayout>
        <Label Grid.Row="2" FontSize="25" x:Name="target" BackgroundColor="Silver" Text="Hola"></Label>

    </Grid>
</ContentPage>
