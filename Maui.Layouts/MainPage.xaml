<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Layouts.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Label Text="Hola" BackgroundColor="Silver" VerticalOptions="Center" HorizontalOptions="Center" FontSize="40"
                   WidthRequest="100" HeightRequest="300" x:Name="lbl"></Label>
            <Button x:Name="btn" Text="Click Me"></Button>
            <Label Text="Start" HorizontalOptions="Start" BackgroundColor="Silver" FontSize="40" ></Label>
            <Label Text="Center" HorizontalOptions="Center" BackgroundColor="Silver" FontSize="40" ></Label>
            <Label Text="End" HorizontalOptions="End" BackgroundColor="Silver" FontSize="40" ></Label>
            <Label Text="Fill" HorizontalOptions="Fill" BackgroundColor="Silver" FontSize="40" ></Label>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
