<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StackLayoutExample.MainPage">
    <StackLayout Orientation="Vertical">
        <StackLayout Orientation="Horizontal" Spacing="10" x:Name="MyStack">
            <BoxView WidthRequest="30" Color="AliceBlue"></BoxView>
            <BoxView WidthRequest="30" Color="AntiqueWhite"></BoxView>
            <BoxView WidthRequest="30" Color="Aqua"></BoxView>
            <Button Clicked="Button_Clicked" Text="Agregar" VerticalOptions="Center"></Button>
        </StackLayout>
        <VerticalStackLayout Spacing="10">
            <BoxView HeightRequest="30" Color="Bisque"></BoxView>
            <BoxView HeightRequest="30" Color="Black"></BoxView>
            <BoxView HeightRequest="30" Color="BlanchedAlmond"></BoxView>
        </VerticalStackLayout>
        <HorizontalStackLayout Spacing="10" BackgroundColor="White">
            <BoxView WidthRequest="30" HeightRequest="200" Color="Bisque"></BoxView>
            <BoxView WidthRequest="30" Color="Black"></BoxView>
            <BoxView WidthRequest="30" Color="BlanchedAlmond"></BoxView>
        </HorizontalStackLayout>
    </StackLayout>
</ContentPage>
